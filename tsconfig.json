{
    "compilerOptions": {
        "target": "es2016",
        "module": "ESNext",
        "declaration": true,
        "moduleResolution": "Bundler",
        "outDir": "dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["src/**/*.test.ts", "./dist/**/*"]
}
